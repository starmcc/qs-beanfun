<StackPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.starmcc.beanfun.controller.LoginController">
   <children>
      <AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="250.0" prefWidth="330.0">
          <children>
              <AnchorPane prefHeight="80.0" prefWidth="330.0" style="-fx-background-color: #40444f;">
                  <children>
                      <ImageView fx:id="logo" fitHeight="80.0" fitWidth="230.0" layoutX="10.0" pickOnBounds="true" smooth="false">
                          <image>
                              <Image url="@../static/images/logo.png" />
                          </image>
                      </ImageView>
                      <ImageView fitHeight="22.0" fitWidth="22.0" layoutX="305.0" layoutY="3.0" onMouseClicked="#closeApplication" pickOnBounds="true" preserveRatio="true" styleClass="title-close">
                          <image>
                              <Image url="@../static/images/login_close_0.png" />
                          </image>
                          <cursor>
                              <Cursor fx:constant="DEFAULT" />
                          </cursor>
                      </ImageView>
                  <ChoiceBox fx:id="choiceBoxLoginType" layoutX="260.0" layoutY="50.0" onAction="#selectLoginTypeAction" prefHeight="23.0" prefWidth="62.0" style="-fx-background-color: white;" />
                  <ImageView fitHeight="22.0" fitWidth="22.0" layoutX="276.0" layoutY="3.0" onMouseClicked="#aboutAction" pickOnBounds="true" preserveRatio="true" styleClass="title-about">
                     <image>
                        <Image url="@../static/images/login_about_0.png" />
                     </image>
                     <cursor>
                        <Cursor fx:constant="DEFAULT" />
                     </cursor>
                  </ImageView>
                  </children>
              </AnchorPane>
              <ComboBox fx:id="comboBoxAccount" editable="true" layoutX="61.0" layoutY="100.0" onAction="#selectAccountAction" prefHeight="28.0" prefWidth="234.0" style="-fx-border-color: D3D3D3; -fx-outer-border: transparent;" />
              <ImageView fitHeight="22.0" fitWidth="22.0" layoutX="36.0" layoutY="103.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                      <Image url="@../static/images/ico.png" />
                  </image>
              </ImageView>
              <ImageView fitHeight="22.0" fitWidth="22.0" layoutX="36.0" layoutY="136.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                      <Image url="@../static/images/pwd.png" />
                  </image>
              </ImageView>
              <PasswordField fx:id="passwordFieldPassword" layoutX="61.0" layoutY="134.0" prefHeight="26.0" prefWidth="234.0" />
              <CheckBox fx:id="checkBoxRemember" focusTraversable="false" layoutX="39.0" layoutY="171.0" mnemonicParsing="false" onAction="#rememberClickAction" text="记住密码">
                  <cursor>
                      <Cursor fx:constant="DEFAULT" />
                  </cursor>
              </CheckBox>
              <Hyperlink fx:id="hyperlinkForgetPwd" focusTraversable="false" layoutX="167.0" layoutY="168.0" onAction="#forgotPwdAction" style="-fx-text-fill: black;" text="忘记密码">
                  <cursor>
                      <Cursor fx:constant="DEFAULT" />
                  </cursor>
              </Hyperlink>
              <Hyperlink fx:id="hyperlinkRegister" focusTraversable="false" layoutX="239.0" layoutY="168.0" onAction="#registerAction" style="-fx-text-fill: black;" text="注册账号">
                  <cursor>
                      <Cursor fx:constant="DEFAULT" />
                  </cursor>
              </Hyperlink>
              <Button fx:id="buttonLogin" layoutX="39.0" layoutY="194.0" mnemonicParsing="false" onAction="#loginAction" prefHeight="35.0" prefWidth="255.0" text="登录" />
              <ImageView fx:id="imageViewQrCode" fitHeight="26.0" fitWidth="26.0" layoutX="303.0" layoutY="223.0" onMouseClicked="#qrCodeClick" pickOnBounds="true" preserveRatio="true">
                  <image>
                      <Image url="@../static/images/二维码.png" />
                  </image>
                  <cursor>
                      <Cursor fx:constant="HAND" />
                  </cursor>
              </ImageView>
            <ProgressBar fx:id="progressBar" styleClass="progress-bar" layoutY="80.0" prefHeight="0.0" prefWidth="330.0" progress="0.0" />
          </children>
      </AnchorPane>
   </children>
</StackPane>
